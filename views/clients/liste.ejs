<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="container mt-5">

    <h1>
        <%= title %>
    </h1>

    <div class="mb-3">
        <a href="/clients/create" class="btn btn-primary">Ajouter un nouveau client</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (clients.length> 0) { %>
                <% clients.forEach(client=> { %>
                    <tr>
                        <td>
                            <%= client.idClient %>
                        </td>
                        <td>
                            <%= client.nom %>
                        </td>
                        <td>
                            <%= client.prenom %>
                        </td>
                        <td>
                            <%= client.email %>
                        </td>
                        <td>
                            <%= client.telephone %>
                        </td>
                        <td>
                            <a href="/clients/<%= client.idClient %>" class="btn btn-info btn-sm">Voir</a>

                            <a href="/clients/update/<%= client.idClient %>" class="btn btn-warning btn-sm">Modifier</a>

                            <form action="/clients/delete/<%= client.idClient %>" method="POST" style="display:inline;"
                                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">Aucun client trouvé.</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Retour à l'accueil</a>

</body>

</html>