<h1><%= title %></h1>

<form action="/reservations/edit/<%= reservation.reservation_id %>" method="POST">
    <div>
        <label>Client :</label>
        <select name="idClient" required>
            <% clients.forEach(client => { %>
                <option value="<%= client.id %>" <%= reservation.idClient == client.id ? 'selected' : '' %>>
                    <%= client.nom %>
                </option>
            <% }) %>
        </select>
    </div>

    <div>
        <label>Chambre :</label>
        <select name="idChambre" required>
            <% chambres.forEach(chambre => { %>
                <option value="<%= chambre.id %>" <%= reservation.idChambre == chambre.id ? 'selected' : '' %>>
                    Chambre n°<%= chambre.numero %>
                </option>
            <% }) %>
        </select>
    </div>

    <div>
        <label>Date de début :</label>
        <input type="date" name="dateDebut" value="<%= reservation.dateDebut %>" required>
    </div>

    <div>
        <label>Date de fin :</label>
        <input type="date" name="dateFin" value="<%= reservation.dateFin %>" required>
    </div>

    <button type="submit">Mettre à jour</button>
    <a href="/reservations">Annuler</a>
</form>