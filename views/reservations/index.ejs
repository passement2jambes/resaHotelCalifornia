<h1><%= title %></h1>

<a href="/reservations/create" style="margin-bottom: 20px; display: inline-block;">+ Ajouter une réservation</a>

<table border="1" cellpadding="10" cellspacing="0" style="width: 100%; text-align: left;">
    <thead>
        <tr>
            <th>ID</th>
            <th>ID Client</th>
            <th>ID Chambre</th>
            <th>Date Début</th>
            <th>Date Fin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (reservations.length > 0) { %>
            <% reservations.forEach(resa => { %>
                <tr>
                    <td><%= resa.reservation_id %></td>
                    <td><%= resa.idClient %></td>
                    <td><%= resa.idChambre %></td>
                    <td><%= resa.dateDebut %></td>
                    <td><%= resa.dateFin %></td>
                    <td>
                        <a href="/reservations/edit/<%= resa.reservation_id %>">Modifier</a> | 
                        <a href="/reservations/delete/<%= resa.reservation_id %>" onclick="return confirm('Supprimer cette réservation ?')">Supprimer</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="6">Aucune réservation trouvée.</td>
            </tr>
        <% } %>
    </tbody>
</table>